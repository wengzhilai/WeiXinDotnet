<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <!-- This section contains the log4net configuration settings -->
  <log4net>
    <appender name="InfoLogFileAppender" type="log4net.Appender.RollingFileAppender">
      <!--日志的路径-->
      <file value="Log/" />
      <!--是否覆盖，默认是追加true-->
      <appendToFile value="true" />
      <!--每个文件的大小-->
      <maximumFileSize value="5000KB" />
      <!--设置无限备份=-1 ，最大备份数为1000-->
      <maxSizeRollBackups value="500" />
      <RollingStyle value="Date" />
      <!--文件名称-->
      <datePattern value="yyyy/yyyyMM/yyyyMMdd'_INFO.txt'" />
      <!--名称是否可以更改 为false为可以更改-->
      <staticLogFileName value="false" />
      <layout type="log4net.Layout.PatternLayout">
        <!--输出格式-->
        <!-- <conversionPattern value="[%p %t] [%date{yyyy-MM-dd HH:mm:ss,fff}] %-5logger - %m%n"/> -->
        <conversionPattern value="%newline %n记录时间：%date %n操作类：%logger property: [%property{NDC}] - %n描述：%message%newline %n" />
      </layout>
      <!--日志等级在指定范围内的事件才被记录-->
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMax value="Info" />
        <levelMin value="Info" />
      </filter>
    </appender>

    <appender name="ERRORLogFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="Log/" />
      <appendToFile value="true" />
      <maximumFileSize value="5000KB" />
      <maxSizeRollBackups value="500" />
      <RollingStyle value="Date" />
      <datePattern value="yyyy/yyyyMM/yyyyMMdd'_ERROR.txt'" />
      <staticLogFileName value="false" />
      <layout type="log4net.Layout.PatternLayout">
        <!-- <conversionPattern value="[%p] %m%n"/> -->
        <conversionPattern value="%n %n记录时间：%date %n操作类：%logger property: [%property{NDC}] %n消息：%m %n" />
      </layout>
      <!--日志等级在指定范围内的事件才被记录-->
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMax value="ERROR" />
        <levelMin value="ERROR" />
      </filter>
    </appender>
    <appender name="DEBUGLogFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="Log/" />
      <appendToFile value="true" />
      <maximumFileSize value="5000KB" />
      <maxSizeRollBackups value="500" />
      <RollingStyle value="Date" />
      <datePattern value="yyyy/yyyyMM/yyyyMMdd'_DEBUG.txt'" />
      <staticLogFileName value="false" />
      <layout type="log4net.Layout.PatternLayout">
        <!-- <conversionPattern value="[%p] %m%n"/> -->
        <conversionPattern value="%n %n记录时间：%date %n操作类：%logger property: [%property{NDC}] %n消息：%m %n" />
      </layout>
      <!--日志等级在指定范围内的事件才被记录-->
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMax value="DEBUG" />
        <levelMin value="DEBUG" />
      </filter>
    </appender>
    <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
      <layout type="log4net.Layout.PatternLayout" value="%date [%thread] %-5level %logger - %message%newline" />
    </appender>

    <root>
      <level value="ALL" />
      <!--文件形式记录日志-->
      <appender-ref ref="InfoLogFileAppender" />
      <appender-ref ref="ERRORLogFileAppender" />
      <appender-ref ref="DEBUGLogFileAppender" />
      <appender-ref ref="ConsoleAppender" />
    </root>
  </log4net>
</configuration>
